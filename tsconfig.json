{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "@cucumber/cucumber", "@playwright/test"],
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
